<div class="p-6" x-data="{ showChart: true }">
  <h1 class="text-2xl font-bold mb-4">Spending Overview</h1>

  <button @click="showChart = !showChart" class="mb-4 bg-blue-500 text-white px-4 py-2 rounded">
    Toggle Chart
  </button>

  <div x-show="showChart" class="w-full max-w-xl">
    <canvas id="spendingChart"></canvas>
  </div>

  <script>
    const ctx = document.getElementById('spendingChart').getContext('2d');
    const spendingChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: <%- JSON.stringify(categories) %>,
        datasets: [{
          data: <%- JSON.stringify(amounts) %>,
          backgroundColor: ['#f87171', '#34d399', '#60a5fa', '#fbbf24', '#a78bfa']
        }]
      },
      options: {
        responsive: true
      }
    });
  </script>
</div>

